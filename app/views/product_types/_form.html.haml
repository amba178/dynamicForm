= form_for @product_type do |f|
  - if @product_type.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product_type.errors.count, "error")} prohibited this product type from being saved:"
      %ul
        - @product_type.errors.full_messages.each do |msg|
          %li= msg

  %div{class: "form-group"}
    = f.label :name
    = f.text_field :name, class: "form-control"
  =f.fields_for :fields do |builder|
    = render 'field_fields', f: builder 
  = link_to_add_fields "Add Field", f, :fields, {class: "btn btn-primary btn-xs"}
  %br 
  = f.submit 'Save', class: "btn btn-primary"
