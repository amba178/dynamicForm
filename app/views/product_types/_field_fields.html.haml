%fieldset{class: 'form-inline'}
	-opts=["text_field", "check_box", "shirt_sizes"]
	=f.collection_select :field_type, opts, :to_s, :to_s, {prompt: true}, {class: "form-control"}
	=f.text_field :name, placeholder: "field_name", class: "form-control"
	=f.check_box :required
	=f.label :required 
	=f.hidden_field :_destroy 
	= link_to "remove" ,'#', class: "remove_fields btn btn-primary btn-xs pull-right"
	